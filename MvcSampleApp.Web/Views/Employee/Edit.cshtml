@model MvcSampleApp.DTO.EmployeeDto

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var companyList = ViewBag.Companies as SelectList ?? new SelectList(null);
}

<h2>Edit</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Employee</h4>
        <hr />
        <p>@ViewData["result"]</p>
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)

        <div class="form-group">
            <div class="col-md-10">
                @Html.LabelFor(model => model.FirstName, htmlAttributes: new { @class = "control-label col-md-2" })
                @Html.TextBoxFor(model => model.FirstName, new { htmlAttributes = new { @class = "form-control" } })
            </div>
            <div class="col-md-10">
                @Html.LabelFor(model => model.MiddleName, htmlAttributes: new { @class = "control-label col-md-2" })
                @Html.TextBoxFor(model => model.MiddleName, new { htmlAttributes = new { @class = "form-control" } })
            </div>
            <div class="col-md-10">
                @Html.LabelFor(model => model.LastName, htmlAttributes: new { @class = "control-label col-md-2" })
                @Html.TextBoxFor(model => model.LastName, new { htmlAttributes = new { @class = "form-control" } })
            </div>
            <div class="col-md-10">
                @Html.LabelFor(model => model.DateOfBirth, htmlAttributes: new { @class = "control-label col-md-2" })
                @Html.TextBoxFor(model => model.DateOfBirth, "{0:yyyy-MM-dd}", new { type = "date", htmlAttributes = new { @class = "form-control" } })
            </div>
            <div class="col-md-10">
                @Html.LabelFor(model => model.NationalIdNo, htmlAttributes: new { @class = "control-label col-md-2" })
                @Html.TextBoxFor(model => model.NationalIdNo, new { htmlAttributes = new { @class = "form-control" } })
            </div>
            <div class="col-md-10">
                @Html.LabelFor(model => model.Gender, htmlAttributes: new { @class = "control-label col-md-2" })
                @Html.TextBoxFor(model => model.Gender, new { htmlAttributes = new { @class = "form-control" } })
            </div>
            <div class="col-md-10">
                @Html.LabelFor(model => model.MaritalStatus, htmlAttributes: new { @class = "control-label col-md-2" })
                @Html.TextBoxFor(model => model.MaritalStatus, new { htmlAttributes = new { @class = "form-control" } })
            </div>
            <div class="col-md-10">
                @Html.LabelFor(model => model.Company.CompanyName, htmlAttributes: new { @class = "control-label col-md-2" })
                @Html.DropDownListFor(x => x.Company.Id, companyList)
            </div>
        </div>


        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
